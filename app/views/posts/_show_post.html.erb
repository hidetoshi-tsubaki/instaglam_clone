<div id ="img">
  <%= link_to show_post_path(@post) do %>
    <%= image_tag @post.img.to_s, class:"show_post_img" %>
  <% end %>
</div>
<div id ="post_contents">
  <div class="post_info">
    <p class="posted_time"><%= @post.created_at.strftime('%Y/%m/%d %H:%M') %></p>
    <p>Posted by <%= link_to "#{@post.user.name}", user_path(@post.user_id) %></p>
    <p><%= simple_format(text_url_to_link(h(@post.title)).html_safe) %></p>
  <%= render 'posts/action_btn' %>
  </div>
  <div class="comments_area">
    <%= render 'comments/comment_form' %>
    <ul id="comments">
      <%= render partial: 'comments/comments', locals: {comments: @comments} %>
    </ul>
  </div>
</div>