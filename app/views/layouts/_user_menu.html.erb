<div id="user_menu_bg" class="user_menu_bg"></div>
<div id="user_menu_wrapper">
  <ul id="user_menu">
    <li>
      <%= link_to 'プロフィール',user_path(current_user) %>
    </li>
    <li id ="mail_notification_toggle">
      <%= render 'notifications/mail_notification_toggle' %>
    </li>
    <li id="upload_link", class="link sp">
    <%= link_to 'Upload',post_path %>
    </li>
    <li id ="push" class="link sp">
      <%= link_to '通知', notifications_path(current_user) %>
      <% if unchecked_notifications %>
        <%= icon("fas", "bell") %>
      <% end %>
    </li>
    <li>
      <%= link_to 'ログアウト', destroy_user_session_path ,method: :delete %>
    </li>
  </ul>
</div>